<%= form_with(model: meal, local: true) do |form| %>
  <% if meal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(meal.errors.count, "error") %> prohibited this meal from being saved:</h2>

      <ul>
      <% meal.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, id: :meal_description %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price, id: :meal_price %>
  </div>


  <div class="field">
    <%= form.label "Ingredients " %>
    <%= form.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :description do |b| %>
      <div class="collection-check-box">
        <%= b.label %>
        <%= b.check_box %>
      </div>
    <% end %>
  </div>




  <div class="field">
    <%= form.label :cookingtime %>
    <%= form.time_select :cookingtime, id: :meal_cookingtime %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
