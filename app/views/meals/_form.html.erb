<%= form_with(model: meal, local: true) do |form| %>
  <% if meal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(meal.errors.count, "error") %> prohibited this meal from being saved:</h2>

      <ul>
      <% meal.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, id: :meal_description %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price, id: :meal_price %>
  </div>
  <div class="field">
    <%= form.label :ingredient_id %>
    <%= form.select :ingredient_id, Ingredient.all.collect{|ingredient| [ingredient.description, ingredient.id]} %>
  </div>



  <div class="field">
    <%= form.label :cookingtime %>
    <%= form.time_select :cookingtime, id: :meal_cookingtime %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
